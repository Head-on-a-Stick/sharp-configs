		<separator/>
		<item label="Lock screen">
			<action name="Execute">
				<command>slock</command>
			</action>
		</item>
		<item label="Exit">
			<action name="Execute">
				<execute>sharp-exit</execute>
			</action>
		</item>
	</menu>
