! Fonts
Xft.antialias: true
Xft.hinting: true
Xft.hintstyle: slight

! (U)XTerm
UXTerm*vt100.allowBoldFonts: false
UXTerm*vt100.cursorUnderLine: true
UXTerm*vt100.cursorBlink: true
UXTerm*vt100.faceName: mono:bold:size=10
UXTerm*vt100.saveLines: 65535
UXTerm*vt100.geometry: 90x30

! Colours
UXTerm*vt100.cursorColor: #88aa88
UXTerm*vt100.foreground:  #888888
UXTerm*vt100.background:  #cecece

! Black
UXTerm*vt100.color0:      #666666
UXTerm*vt100.color8:      #888888

! Red
UXTerm*vt100.color1:      #aa8888
UXTerm*vt100.color9:      #aa8888

! Green
UXTerm*vt100.color2:      #88aa88
UXTerm*vt100.color10:     #88aa88

! Yellow
UXTerm*vt100.color3:      #aaaa88
UXTerm*vt100.color11:     #aaaa88

! Blue
UXTerm*vt100.color4:      #8888aa
UXTerm*vt100.color12:     #8888aa

! Magenta
UXTerm*vt100.color5:      #aa88aa
UXTerm*vt100.color13:     #aa88aa

! Cyan
UXTerm*vt100.color6:      #88aaaa
UXTerm*vt100.color14:     #88aaaa

! White
UXTerm*vt100.color7:      #aaaaaa
UXTerm*vt100.color15:     #aaaaaa
